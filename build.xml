<?xml version="1.0" ?> 
<project name="jServices" default="all">

    <target name="init">
        <mkdir dir="build" />
        <mkdir dir="dist" />
    </target>

    <target name="compile" depends="init">
        <javac srcdir="src" destdir="build" includeantruntime="false" source="1.5" target="1.5" />
    </target>

    <target name="dist" depends="compile">
        <jar destfile="dist/jServices.jar" basedir="build" />
    </target>

    <target name="clean">
        <delete dir="build" />
        <delete dir="dist" />
    </target>
    
    <target name="all" depends="clean,dist"/>
</project>
